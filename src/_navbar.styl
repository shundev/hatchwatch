@import "./_mixins"
@import "./_skin"

.logo
  float: left
  display: block
  background-image: url('./images/hw_logo_right.png')
  background-repeat: no-repeat
  background-size: cover
  margin: 1rem 0rem 1rem 0rem
  height: 45px;
  width: 225px;
  box-sizing: border-box

  +mobile-only()
    margin-left: 0rem

.navbar
  overflow: hidden
  background-color: #FFF
  position: fixed
  width: 100%
  z-index: 10

.navbar .icon
    float: left
    display: block
    color: #222
    text-align: center
    padding: 1.4rem 3rem
    text-decoration: none
    font-size: 2.2rem

.navbar a:not(:first-child):not(.icon)
    float: right
    display: block
    color: #222
    text-align: center
    padding: 1.4rem 3rem
    text-decoration: none
    font-size: 17px

.navbar a:hover
    font-weight: bold

.navbar .icon
    display: none

.navbar a:not(:first-child):not(.icon)
  +mobile-only()
    display: none

.navbar a.icon
  +mobile-only()
    float: right
    display: block

.navbar.responsive
  +mobile-only()
    position: fixed

.navbar.responsive .icon
  +mobile-only()
    position: absolute
    right: 0
    top: 0

.navbar.responsive a:not(:first-child)
  +mobile-only()
    clear: left
    float: none
    display: block
    text-align: left
